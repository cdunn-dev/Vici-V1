
# Database connection string - PostgreSQL URL for Neon
DATABASE_URL=postgres://username:password@your-postgres-instance.com/dbname?sslmode=require

# Data migration flag (set to 'true' to migrate file-based data to database)
# MIGRATE_DATA=true

# JWT secret for authentication (required)
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Strava API integration (optional)
# STRAVA_CLIENT_ID=your_strava_client_id
# STRAVA_CLIENT_SECRET=your_strava_client_secret

# Node environment
NODE_ENV=development

# Server port
PORT=5000
